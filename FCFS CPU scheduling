n=int(input("enter the no of processors: "))
burst_time=[]
for i in range(n):
    bt=int(input(f"enter the burst time for P{i+1}: "))
    burst_time.append(bt)
waiting_time=[0]*n
turnaround_time=[0]*n
for i in range(1,n):
    waiting_time[i]=waiting_time[i-1]+burst_time[i-1]

for i in range(n):
    turnaround_time[i]=waiting_time[i]+burst_time[i]
print("\n")
print("process\tBurst time\t waiting_time\t turnaround_time")
for i in range(n):
    print(f"P{i+1}\t\t{burst_time[i]}\t\t\t{waiting_time[i]}\t\t\t\t{turnaround_time[i]}")
    
avg_waitingtime=sum(waiting_time)/n
avg_turnaroundtime=sum(turnaround_time)/n
print(f"the average waiting time is {avg_waitingtime}")
print(f"the average turn around time is {avg_turnaroundtime}")
                    
